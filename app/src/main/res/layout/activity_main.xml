<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="274dp"
        android:layout_height="434dp"

        android:background="@drawable/background"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="53dp" />

        <ImageView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            app:srcCompat="@drawable/massindex" />

        <TextView
            android:id="@+id/bodyindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:selectAllOnFocus="false"
            android:text="BODY MASS INDEX"
            android:textColor="#64b0be"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            app:srcCompat="@drawable/massindex" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/indexint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textColor="#FFFFFF"
                android:textSize="72sp" />

            <TextView
                android:id="@+id/indexfloat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=".61"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/line"
            android:layout_width="142dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/white" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="53dp" />

        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="hello olivia, you are normal"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Normal BMI range: 18.5kg/m2 - 25kg/m2"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ponderal index: 10.64kg/m3"
            android:textColor="#FFFFFF" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="33dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <ImageView
                android:id="@+id/share"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/share" />


            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/rate"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"

                android:scaleType="fitCenter"
                app:srcCompat="@drawable/rate" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>